<header>
  <nav class="navbar navbar-expand-sm">
    <div class="container-fluid">
      <button
        class="navbar-toggler ms-auto"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbar-collapse"
        aria-controls="navbar"
        aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbar-collapse">
        <ul class="navbar-nav me-auto">
          <li class="nav-item mx-3">
            <a class="nav-link text-black" href="/Home">Home</a>
          </li>
          <li class="nav-item mx-3">
            <a class="nav-link text-black" href="/profile">Profile</a>
          </li>
        </ul>
        <div class="nav-item mx-3" id="auth-link">
          <a class="nav-link text-black" href="/login">Login</a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  // Placeholder for authentication status (change 'false' to 'true' to simulate login)
  let isLoggedIn = false;  // Change to true to simulate a logged-in user

  // Select the auth-link container
  const authLink = document.getElementById('auth-link');

  // Update the navbar based on login status
  if (isLoggedIn) {
    authLink.innerHTML = '<a class="nav-link text-black" href="/logout">Logout</a>';
  } else {
    authLink.innerHTML = '<a class="nav-link text-black" href="/login">Login</a>';
  }
</script>

