<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - Buff Bets</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #cfb87c; /* CU Boulder Gold */
            color: #000;
            text-align: center;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            margin: 50px auto;
        }

        .card {
            background: #000;
            color: #cfb87c;
            padding: 20px;
            margin: 15px;
            border-radius: 10px;
            box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.3);
            display: inline-block;
            width: 30%;
            position: relative;
        }

        .card h3 {
            margin: 10px 0;
        }

        .bet-btn {
            background-color: #cfb87c;
            color: black;
            border: none;
            padding: 10px;
            cursor: pointer;
            border-radius: 5px;
            font-weight: bold;
        }

        .bet-btn:hover {
            background-color: #b39a64;
        }

        /* Modal styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            width: 300px;
            text-align: center;
        }

        .close {
            color: red;
            float: right;
            font-size: 20px;
            cursor: pointer;
        }

        .place-bet {
            background-color: #cfb87c;
            border: none;
            padding: 10px;
            width: 100%;
            cursor: pointer;
            border-radius: 5px;
            font-weight: bold;
        }

        .place-bet:hover {
            background-color: #b39a64;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2>Upcoming Games</h2>

        <!-- Game Cards -->
        <div class="card">
            <h3>April 5, 2025</h3>
            <p>Team A vs Team B</p>
            <p>Odds: 1.5 - 2.8</p>
            <button class="bet-btn" onclick="openBetForm('Team A', 'Team B')">Place Bet</button>
        </div>

        <div class="card">
            <h3>April 6, 2025</h3>
            <p>Team C vs Team D</p>
            <p>Odds: 1.9 - 2.3</p>
            <button class="bet-btn" onclick="openBetForm('Team C', 'Team D')">Place Bet</button>
        </div>

        <!-- Add more cards here as needed -->

    </div>

    <!-- Bet Modal -->
    <div id="betModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeBetForm()">&times;</span>
            <h3>Place Your Bet</h3>
            <form id="betForm">
                <p id="matchup"></p>
                <label>
                    <input type="radio" name="team" id="teamA" value="">
                    <span id="teamAName"></span>
                </label>
                <br>
                <label>
                    <input type="radio" name="team" id="teamB" value="">
                    <span id="teamBName"></span>
                </label>
                <br><br>
                <label for="betAmount">Bet Amount:</label>
                <input type="number" id="betAmount" min="1" required>
                <br><br>
                <button type="submit" class="place-bet">Place Bet</button>
            </form>
        </div>
    </div>

    <script>
        function openBetForm(teamA, teamB) {
            document.getElementById('betModal').style.display = 'flex';
            document.getElementById('matchup').innerText = `${teamA} vs ${teamB}`;
            document.getElementById('teamA').value = teamA;
            document.getElementById('teamAName').innerText = teamA;
            document.getElementById('teamB').value = teamB;
            document.getElementById('teamBName').innerText = teamB;
        }

        function closeBetForm() {
            document.getElementById('betModal').style.display = 'none';
        }

        document.getElementById('betForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const selectedTeam = document.querySelector('input[name="team"]:checked');
            const betAmount = document.getElementById('betAmount').value;
            
            if (!selectedTeam) {
                alert("Please select a team!");
                return;
            }

            alert(`Bet placed on ${selectedTeam.value} for $${betAmount}`);
            closeBetForm();
        });
    </script>

</body>
</html>
