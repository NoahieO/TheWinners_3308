<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - Buff Bets</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #cfb87c; /* CU Boulder Gold */
            color: #000; /* Black Text */
            text-align: center;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 90%;
            margin: 50px auto;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }

        .card {
    background: #000;
    color: #cfb87c;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.3);
    width: 300px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}


        .card h3 {
            margin: 10px 0;
        }

        .bet-form {
            display: none;
            margin-top: 15px;
        }

        .card button {
            margin-top: auto;
            padding: 8px 12px;
            background-color: #cfb87c;
            color: #000;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .card input, .card select {
            margin: 5px 0;
            padding: 5px;
            width: 100%;
        }
    </style>
</head>
<body>
    <body data-balance="{{balance}}">

    <h2 style="margin-top: 50px;">ðŸ¦¬Upcoming GamesðŸ¦¬</h2>

    <div class="container">
        {{#each events}}
            <div class="card">
                <div>
                    <h3>{{date}}</h3>
                    <p>{{home_team}} vs {{away_team}}</p>
                    {{#each odds}}
                        <p>{{team}}: {{moneyline}}</p>
                    {{/each}}
                </div>

                {{#if ../isLoggenIn}}
                <button onclick="toggleForm(this)">Place Bet ðŸ¦¬</button>

                <form class="bet-form" action="/bets" method="POST">
                    <select name="team" required>
                        <option value="" disabled selected>Select Team</option>
                        {{#each odds}}
                            <option value="{{team}}">{{team}}</option>
                        {{/each}}
                    </select>
                    <input type="number" name="amount" placeholder="Bet Amount ($)" required min="1">
                    <button type="submit">Submit</button>
                </form>
                {{else}}
                    <p>
  <a href="/login" style=
    "display: inline-block;
    color: #000;
    background-color: #cfb87c;
    padding: 8px 16px;
    border-radius: 5px;
    text-decoration: none;
    font-weight: bold;
    border: 2px solid #cfb87c;">
    Login</a> to place a bet.</p>
                {{/if}}
            </div>
        {{/each}}
    </div>

    <script>
    function toggleForm(button) {
        const form = button.nextElementSibling;
        form.style.display = form.style.display === 'block' ? 'none' : 'block';
    }

    document.addEventListener("DOMContentLoaded", () => {
        const betForms = document.querySelectorAll(".bet-form");

        betForms.forEach(form => {
            form.addEventListener("submit", function(e) {
                
                const amountInput = this.querySelector('input[name="amount"]');
                const teamSelect = this.querySelector('select[name="team"]');
                const amount = parseFloat(amountInput.value);
                const balance = parseFloat(document.body.dataset.balance); // see below

                if(!betValidate(amount, balance)) e.preventDefault(); return;
        
                // this.reset();
                //this.style.display = 'none';
            });
        });
    });

    function betValidate(amount, balance)
    {
        if (isNaN(amount) || amount <= 0) {
            alert("Please enter a valid bet amount.");
            return 0;
        }

        if (amount > balance) {
            alert("Insufficient balance to place this bet.");
            return 0;
        }
        alert("Bet placed! (Simulated)"); //I left this in but we can take it out, this just helps us to know for now
        return 1;
    }
</script>

</body>
</html>
